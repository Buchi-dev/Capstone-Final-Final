# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/your_database_name

# Server Configuration
PORT=5000
NODE_ENV=development

# Logging Configuration
# LOG_LEVEL options: error, warn, info, debug
# In production, defaults to 'warn', in development defaults to 'info'
LOG_LEVEL=info
# Set to 'true' to enable verbose logging (all requests, auth attempts, socket events)
VERBOSE_LOGGING=false

# Session Secret
SESSION_SECRET=your_super_secret_session_key_change_this_in_production

# Client URL (for redirects after authentication)
CLIENT_URL=http://localhost:5173

# Firebase Configuration (Required for authentication)
FIREBASE_PROJECT_ID=your-firebase-project-id
# Option 1: Path to Firebase service account JSON file (recommended for development)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# Option 2: Firebase service account JSON as environment variable (recommended for production)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Device API Key (for IoT device authentication)
DEVICE_API_KEY=your_secure_device_api_key_here
# Alternative API key reference used by MQTT service
API_KEY=your_secure_device_api_key_here

# Email/SMTP Configuration (for automated notifications)
# For Gmail: use smtp.gmail.com with port 587
# For other providers: configure accordingly
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM_NAME=Water Quality Monitor

# Redis Configuration (for caching and background jobs)
REDIS_URL=redis://localhost:6379

# MQTT Configuration (HiveMQ)
MQTT_BROKER_URL=mqtt://broker.hivemq.com:1883
MQTT_CLIENT_ID=water-quality-server
MQTT_USERNAME=
MQTT_PASSWORD=
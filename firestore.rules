rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // ==================== USER PROFILES ====================
    match /users/{userId} {
      // Users can read their own profile, Admins can read all profiles
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Users can update their own profile (cannot modify protected fields)
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['uuid', 'email', 'role', 'status', 'createdAt']);
      
      // Admins can update user role, status, and updatedAt
      allow update: if isAdmin()
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['uuid', 'email', 'createdAt']);
      
      // Only Cloud Functions can create or delete user profiles
      allow create, delete: if false;
    }
    
    // ==================== LOGIN LOGS ====================
    // Only Cloud Functions can write to login logs
    match /login_logs/{logId} {
      allow read, write: if false;
    }
    
    // ==================== DEVICES ====================
    match /devices/{deviceId} {
      // Authenticated users can read devices
      allow read: if request.auth != null;
      
      // Only Cloud Functions can write to devices
      allow write: if false;
    }
    
    // ==================== SENSOR READINGS ====================
    match /sensor_readings/{readingId} {
      // Authenticated users can read sensor readings
      allow read: if request.auth != null;
      
      // Only Cloud Functions can write sensor readings
      allow write: if false;
    }
    
    // ==================== REPORTS ====================
    match /reports/{reportId} {
      // Authenticated users can read reports
      allow read: if request.auth != null;
      
      // Only Cloud Functions can write reports
      allow write: if false;
    }
    
    // ==================== ALERTS ====================
    match /alerts/{alertId} {
      // Authenticated users can read alerts
      allow read: if request.auth != null;
      
      // Admins can acknowledge/resolve alerts (update status fields)
      allow update: if isAdmin()
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['status', 'acknowledgedAt', 'acknowledgedBy', 'resolvedAt', 'resolvedBy', 'metadata']);
      
      // Only Cloud Functions can create or delete alerts
      allow create, delete: if false;
    }
    
    // ==================== ALERT SETTINGS ====================
    match /alertSettings/{settingId} {
      // Authenticated users can read alert settings
      allow read: if request.auth != null;
      
      // Only Admins can update alert settings (thresholds)
      allow write: if isAdmin();
    }
    
    // ==================== NOTIFICATION PREFERENCES ====================
    match /notificationPreferences/{userId} {
      // Users can read and write their own notification preferences
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can read all notification preferences
      allow read: if isAdmin();
    }
    
    // ==================== READINGS (for alert monitoring) ====================
    match /readings/{readingId} {
      // Authenticated users can read readings
      allow read: if request.auth != null;
      
      // Only Cloud Functions can write readings
      allow write: if false;
    }
  }
}
# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v2

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/water-quality-monitoring

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# MQTT Configuration (HiveMQ Cloud)
MQTT_BROKER_URL=mqtts://your-broker.s1.eu.hivemq.cloud:8883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password
MQTT_CLIENT_ID=water-quality-server

# Email Service Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="Water Quality System <noreply@example.com>"
CLIENT_URL=http://localhost:5173

# Winston Logger Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Firebase Admin SDK Configuration
# Option 1: Use service account file (recommended)
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Option 2: Use individual credentials (alternative to service account file)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Google Drive Backup Configuration
# Option 1: Reuse Firebase service account (recommended - no extra setup needed!)
# Just enable Google Drive API in your Firebase project's Google Cloud Console
# Leave blank to use FIREBASE_SERVICE_ACCOUNT_PATH automatically

# Option 2: Use separate service account file
# GOOGLE_DRIVE_CREDENTIALS_PATH=./googleDriveServiceAccount.json

# Option 3: Use JSON string directly
# GOOGLE_DRIVE_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Backup encryption key (generate with: openssl rand -hex 32)
BACKUP_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Keep local backups after uploading to Google Drive (true/false)
KEEP_LOCAL_BACKUPS=false
